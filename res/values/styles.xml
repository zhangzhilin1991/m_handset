<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="myBarStyle" parent="Theme.AppCompat.Light"></style>

    <style name="myMaterialTheme" parent="Theme.AppCompat.Light">

        <!-- ACTIONBAR STYLE -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowBackground">@color/green</item>
    </style>

    <!-- button Style -->
    <style name="buttonStyle" parent="Theme.AppCompat">
        
    </style>

</resources>